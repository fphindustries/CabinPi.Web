@model CabinPi.Web.Pages.Shared._MeasurementCardModel
@{

}
<div class="card">
    <div class="card-header pb-0">
        <div class="card-header-icon">
            <span class="material-symbols-outlined">@Model.Icon</span>
        </div>
        <h5 class="mb-0 mt-2 d-flex align-items-center"> @Model.Caption</h5>
    </div>
    <div class="card-body d-flex flex-column justify-content-end">
        <div class="row">
            <div class="col">
                <p class="lh-1 mb-1 fs-2">@Model.Value<span class="fs-4">@Html.Raw(Model.Units)</span></p>
            </div>
            <div class="col-auto ps-0">
                <svg id="@Model.SparkId" class="sparkline" width="100" height="30" stroke-width="2" stroke="blue" fill="rgba(0, 0, 255, .2)"></svg>
            </div>
        </div>
    </div>
</div>
